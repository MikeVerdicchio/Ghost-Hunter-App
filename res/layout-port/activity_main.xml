<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/graveyard"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingEnd="@dimen/activity_horizontal_margin"
    android:paddingStart="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.T10006.GhostHunter.MainActivity" >

    <ImageView
        android:id="@+id/menughost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/start"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/logo"
        android:minHeight="400dp"
        android:minWidth="400dp" />

    <Button
        android:id="@+id/start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/password"
        android:minHeight="100dp"
        android:minWidth="400dp"
        android:onClick="charChoose"
        android:layout_marginBottom="30dp"
        android:text="@string/start"
        android:textSize="50sp" />

    <Button
        android:id="@+id/password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/settings"
        android:layout_marginBottom="30dp"
        android:minHeight="100dp"
        android:minWidth="400dp"
        android:text="@string/splash"
        android:textSize="50sp" 
        android:onClick="goSplash"/>
    
    <Button
        android:id="@+id/settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:minHeight="100dp"
        android:layout_marginBottom="30dp"
        android:minWidth="400dp"
        android:text="@string/settings"
        android:textSize="50sp" 
        android:onClick="toInstructions"/>


</RelativeLayout>